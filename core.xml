            <Frame name="AuxLogFrame" inherits="AuxFrameBoxTemplate">
                <Size><AbsDimension x="400" y="40"/></Size>
                <Anchors>
                    <Anchor point="LEFT">
                        <Offset>
                            <AbsDimension x="5" y="0"/>
                        </Offset>
                    </Anchor>
                    <Anchor point="RIGHT">
                        <Offset>
                            <AbsDimension x="-10" y="0"/>
