                </Anchors>
                <Scripts>
                    <OnLoad>
                        this:SetWidth(floor(this:GetParent():GetWidth()/2))
                    </OnLoad>
                </Scripts>
                <Frames>
                    <ScrollingMessageFrame name="$parentMessageFrame" maxLines="500">
                        <Anchors>
                            <Anchor point="TOPLEFT">
                                <Offset>
                                    <AbsDimension x="8" y="-15"/>
                                </Offset>
                            </Anchor>
                            <Anchor point="BOTTOMRIGHT">
                                <Offset>
                                    <AbsDimension x="-8" y="15"/>
                                </Offset>
                            </Anchor>
                        </Anchors>
                        <Scripts>
                            <OnLoad>
                                Aux.log_frame_load()
                            </OnLoad>
                            <OnUpdate>
                                Aux.log_frame_update(arg1)
                            </OnUpdate>
                            <OnMouseWheel>
                                if arg1 == 1 then
                                this:ScrollUp()
                                elseif arg1 == -1 then
                                this:ScrollDown()
                                end
                            </OnMouseWheel>
                        </Scripts>
                        <FontString inherits="GameFontNormal" justifyH="CENTER"/>
                    </ScrollingMessageFrame>
